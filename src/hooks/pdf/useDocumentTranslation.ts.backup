/**
 * Hook für Dokumentübersetzungen
 * @param language Sprachcode (z.B. 'de', 'en', 'fr')
 * @returns Übersetzungsfunktionen und aktuelle Sprache
 */
export function useDocumentTranslation(language: string = 'de') {
  const currentTranslations = useMemo(() => {
    return translations[language] || translations['de']; // Fallback zu Deutsch
  }, [language]);

  const t = useMemo(() => {
    return (key: keyof DocumentTranslations): string => {
      return currentTranslations[key] || key;
    };
  }, [currentTranslations]);

  const getAvailableLanguages = useMemo(() => {
    return Object.keys(translations);
  }, []);

  const getLanguageName = useMemo(() => {
    const languageNames: Record<string, string> = {
      'de': 'Deutsch',
      'en': 'English',
      'fr': 'Français',
      'es': 'Español',
      'it': 'Italiano',
      'nl': 'Nederlands',
      'pt': 'Português',
      'pl': 'Polski',
    };
    return (code: string) => languageNames[code] || code;
  }, []);

  return {
    t,
    currentLanguage: language,
    availableLanguages: getAvailableLanguages,
    getLanguageName,
    isLanguageSupported: (lang: string) => lang in translations,
  };
}

export default useDocumentTranslation;