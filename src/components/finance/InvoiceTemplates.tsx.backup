              {data.companyEmail && <div>E-Mail: {data.companyEmail}</div>}
              {data.companyPhone && <div>Telefon: {data.companyPhone}</div>}
              {data.companyWebsite && <div>Internet: {data.companyWebsite}</div>}
            </div>
          </div>
        </div>
        
        <div className="text-right">
          <h2 className="text-3xl font-bold text-gray-900 mb-4">RECHNUNG</h2>
