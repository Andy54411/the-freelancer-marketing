        <div className="grid grid-cols-2 gap-6">
          <div className="space-y-1">
            {data.companyVatId && <div><strong>USt-IdNr:</strong> {data.companyVatId}</div>}
            {data.companyTaxNumber && <div><strong>Steuernummer:</strong> {data.companyTaxNumber}</div>}
            {data.companyRegister && <div><strong>Handelsregister:</strong> {data.companyRegister}</div>}
            {data.districtCourt && <div><strong>Registergericht:</strong> {data.districtCourt}</div>}
