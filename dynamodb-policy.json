{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem", 
        "dynamodb:UpdateItem",
        "dynamodb:DeleteItem",
        "dynamodb:Query",
        "dynamodb:Scan"
      ],
      "Resource": [
        "arn:aws:dynamodb:eu-central-1:319629020205:table/TaskiloChatStats",
        "arn:aws:dynamodb:eu-central-1:319629020205:table/TaskiloChatMessages",
        "arn:aws:dynamodb:eu-central-1:319629020205:table/TaskiloChatParticipants"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream", 
        "logs:PutLogEvents"
      ],
      "Resource": "arn:aws:logs:eu-central-1:319629020205:*"
    }
  ]
}
