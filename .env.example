# ============================================
# TASKILO - Environment Variables Template
# ============================================
# Kopiere diese Datei zu .env.local und fülle die Werte aus

# ============================================
# FIREBASE CONFIGURATION (PRODUCTION)
# ============================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your-project-default-rtdb.europe-west1.firebasedatabase.app

# Firebase Functions URL (Production)
NEXT_PUBLIC_FIREBASE_FUNCTIONS_BASE_URL=https://europe-west1-your-project.cloudfunctions.net
FIREBASE_FUNCTION_URL=https://europe-west1-your-project.cloudfunctions.net/financeApiWithOCR

# Firebase Admin SDK (JSON als String)
FIREBASE_SERVICE_ACCOUNT_KEY={"type": "service_account", "project_id": "your-project-id"}

# ============================================
# GOOGLE SERVICES
# ============================================
# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXXX

# Google Maps API
NEXT_PUBLIC_Maps_API_KEY=your_maps_api_key

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key

# Google OAuth für Gmail-Integration
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/oauth/callback/gmail
GMAIL_PUBSUB_TOPIC=projects/your-project/topics/gmail-notifications

# Google Service Account (für Newsletter-Integration)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----
GOOGLE_SHEETS_NEWSLETTER_ID=your_google_sheet_id

# Google Ads Developer Token
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token

# ============================================
# FINAPI BANKING (SANDBOX)
# ============================================
FINAPI_ENVIRONMENT=sandbox
FINAPI_BASE_URL_SANDBOX=https://sandbox.finapi.io
FINAPI_BASE_URL_PRODUCTION=https://finapi.io

# Default Client (Banks API)
FINAPI_SANDBOX_CLIENT_ID=your_client_id
FINAPI_SANDBOX_CLIENT_SECRET=your_client_secret
FINAPI_SANDBOX_DATA_DECRYPTION_KEY=your_decryption_key
NEXT_PUBLIC_FINAPI_ENVIRONMENT=sandbox

# Admin Client (User Management & WebForms)
FINAPI_ADMIN_CLIENT_ID=your_admin_client_id
FINAPI_ADMIN_CLIENT_SECRET=your_admin_client_secret
FINAPI_ADMIN_DATA_DECRYPTION_KEY=your_admin_decryption_key

# ============================================
# REVOLUT API (PRODUCTION)
# ============================================
# Revolut Business API (eigene Konten)
REVOLUT_CLIENT_ID=your_revolut_client_id
REVOLUT_ENVIRONMENT=production
REVOLUT_ACCESS_TOKEN=oa_prod_your_access_token
REVOLUT_REFRESH_TOKEN=oa_prod_your_refresh_token
REVOLUT_WEBHOOK_SECRET=wsk_your_webhook_secret
REVOLUT_BUSINESS_WEBHOOK_SECRET=wsk_your_business_webhook_secret

# Revolut Zertifikate (Pfade zu lokalen .pem/.key Dateien)
REVOLUT_TRANSPORT_CERT_PATH=./certs/revolut/transport.pem
REVOLUT_SIGNING_CERT_PATH=./certs/revolut/signing.pem
REVOLUT_PRIVATE_KEY_PATH=./certs/revolut/private.key

# Revolut Merchant API (Kundenzahlungen)
REVOLUT_MERCHANT_API_KEY=sk_your_merchant_api_key
REVOLUT_MERCHANT_PUBLIC_KEY=pk_your_merchant_public_key
REVOLUT_MERCHANT_ID=your_merchant_id

# ============================================
# STRIPE PAYMENT PROCESSING
# ============================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key
STRIPE_SECRET_KEY=sk_live_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# AWS SERVICES
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-central-1
AWS_ACCOUNT_ID=your_account_id

# AWS S3 Storage
AWS_S3_BUCKET=your-s3-bucket-name

# AWS Services
AWS_SNS_TOPIC_ARN=arn:aws:sns:eu-central-1:account-id:topic-name
AWS_DYNAMODB_ADMIN_EMAILS_TABLE=YourAdminEmailsTable
AWS_DYNAMODB_CONNECTIONS_TABLE=YourWebSocketConnectionsTable

# AWS Realtime Services
AWS_EVENTBRIDGE_BUS=your-events-bus
NEXT_PUBLIC_AWS_WEBSOCKET_URL=wss://your-api-id.execute-api.eu-central-1.amazonaws.com/production
AWS_LAMBDA_REALTIME_FUNCTION=your-realtime-function

# ============================================
# HETZNER SERVICES (WEBMAIL + KI)
# ============================================
# Hetzner Webmail Proxy
WEBMAIL_API_KEY=your_webmail_api_key
WEBMAIL_PROXY_URL=https://mail.taskilo.de/webmail-api
NEXT_PUBLIC_WEBMAIL_API_KEY=your_webmail_api_key
NEXT_PUBLIC_HETZNER_WEBMAIL_URL=https://mail.taskilo.de
HETZNER_WEBMAIL_URL=https://mail.taskilo.de

# Mailcow API (E-Mail Server)
MAILCOW_API_KEY=your_mailcow_api_key
MAILCOW_API_URL=https://mail.taskilo.de/api/v1

# WorkMail IMAP/SMTP Zugangsdaten (für Entwicklung)
WORKMAIL_ANDY_EMAIL=your_email@taskilo.de
WORKMAIL_ANDY_PASSWORD=your_password
WORKMAIL_SUPPORT_EMAIL=support@taskilo.de
WORKMAIL_SUPPORT_PASSWORD=your_support_password

# SMTP für Admin-Benachrichtigungen
SMTP_HOST=mail.taskilo.de
SMTP_PORT=587
SMTP_USER=support@taskilo.de
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=support@taskilo.de

# Hetzner SMTP für Newsletter
HETZNER_SMTP_HOST=mail.taskilo.de
HETZNER_SMTP_PORT=587
HETZNER_SMTP_USER=support@taskilo.de
HETZNER_SMTP_PASSWORD=your_smtp_password

# Taskilo KI (OCR + Dokument-Klassifikation)
HETZNER_OCR_API_KEY=your_ocr_api_key
NEXT_PUBLIC_HETZNER_KI_URL=https://mail.taskilo.de/ki

# Hetzner Cloud API
HETZNER_CLOUD_API_TOKEN=your_cloud_api_token
HETZNER_SERVER_ID=your_server_id
HETZNER_RESCUE_PASSWORD=your_rescue_password

# Hetzner Robot API (Domain-Registrierung)
HETZNER_ROBOT_USER=your_robot_user
HETZNER_ROBOT_PASSWORD=your_robot_password

# ============================================
# META / WHATSAPP BUSINESS API
# ============================================
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_EMBEDDED_SIGNUP_CONFIG_ID=your_config_id
NEXT_PUBLIC_META_APP_ID=your_meta_app_id
NEXT_PUBLIC_META_CONFIG_ID=your_config_id

# WhatsApp Business API
META_WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
META_WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
META_WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# ============================================
# DATEV API (Steuerberater-Schnittstelle)
# ============================================
DATEV_CLIENT_ID=your_datev_client_id
DATEV_CLIENT_SECRET=your_datev_client_secret

# ============================================
# INWX DOMAIN REGISTRAR
# ============================================
INWX_USERNAME=your_inwx_username
INWX_PASSWORD=your_inwx_password
INWX_API_URL=https://api.domrobot.com/jsonrpc/

# ============================================
# TWILIO (SMS/WHATSAPP)
# ============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_VERIFY_SID=your_twilio_verify_sid
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_SMS_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=+1234567890

# ============================================
# RESEND (E-MAIL VERSAND)
# ============================================
RESEND_API_KEY=re_your_resend_api_key
RESEND_WEBHOOK_SECRET=whsec_your_resend_webhook_secret

# ============================================
# NEXTAUTH (AUTHENTICATION)
# ============================================
NEXTAUTH_URL=http://localhost:3000

# ============================================
# SECURITY & JWT
# ============================================
JWT_SECRET=your_super_secure_jwt_secret_key_min_32_characters
CRON_SECRET=your_cron_secret_key

# ============================================
# APPLICATION SETTINGS
# ============================================
NEXT_PUBLIC_APP_URL=https://taskilo.de
NEXT_PUBLIC_BASE_URL=https://taskilo.de

# Admin-E-Mails
ADMIN_EMAIL=admin@taskilo.de
SUPPORT_EMAIL=support@taskilo.de
NOREPLY_EMAIL=noreply@taskilo.de

# Newsletter
NEWSLETTER_FROM_EMAIL=newsletter@taskilo.de
NEWSLETTER_FROM_NAME=Taskilo Team

# Invite Codes (für geschlossene Beta)
EMPLOYEE_INVITE_CODE=your_employee_invite_code
MASTER_INVITE_CODE=your_master_invite_code

# ============================================
# VERCEL DEPLOYMENT (automatisch gesetzt)
# ============================================
VERCEL=1
VERCEL_ENV=production
VERCEL_URL=
VERCEL_GIT_COMMIT_SHA=
VERCEL_TARGET_ENV=production

# Turbo Cache Settings
TURBO_CACHE=remote:rw
TURBO_DOWNLOAD_LOCAL_ENABLED=true
TURBO_REMOTE_ONLY=true
TURBO_RUN_SUMMARY=true
NX_DAEMON=false
