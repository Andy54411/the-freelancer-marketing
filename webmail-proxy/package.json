    "exif-parser": "^0.1.12",
    "exifr": "^7.1.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "imapflow": "^1.0.162",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.21.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "sanitize-html": "^2.11.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.1",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "@types/sanitize-html": "^2.9.5",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
