{
  "name": "taskilo-webmail-proxy",
  "version": "2.1.0",
  "description": "Secure Webmail IMAP/SMTP Proxy Server for Taskilo - runs on Hetzner",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:pm2": "pm2 start dist/server.js --name webmail-proxy",
    "stop:pm2": "pm2 stop webmail-proxy",
    "logs": "pm2 logs webmail-proxy"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
