{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "lib", // Das Ausgabe-Verzeichnis bleibt 'lib'
        // "rootDir" wird durch "rootDirs" ersetzt, um Importe von au√üerhalb des lokalen 'src' zu erlauben
        "rootDirs": [
            "src",
            "../src/shared"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "types": [
            "node",
            "firebase-functions"
        ],
        "baseUrl": ".",
        "paths": {
            "@functions/*": [
                "src/*"
            ],
            "@shared/*": [
                "../src/shared/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts", // Alle TypeScript-Dateien im src-Ordner
        "src/**/*.d.ts" // Explizite Einbindung von .d.ts-Dateien
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}