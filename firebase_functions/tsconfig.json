{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2021",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "rootDir": "src"
    },
    "compileOnSave": true,
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}