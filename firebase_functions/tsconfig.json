{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "types": [
            "node",
            "firebase-functions"
        ],
        "baseUrl": "./src",
        "paths": {
            "@functions/*": [
                "*"
            ]
        }
    },
    "include": [
        "src/**/*.ts", // Alle TypeScript-Dateien im src-Ordner
        "src/**/*.d.ts" // Explizite Einbindung von .d.ts-Dateien
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}